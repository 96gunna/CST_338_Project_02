<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCartActivity">

    <TextView
        android:id="@+id/cartProductDisplay"
        android:layout_width="359dp"
        android:layout_height="319dp"
        android:gravity="center"
        android:text="Click Browse to view products."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/backToBrowseButton"
        android:layout_width="173dp"
        android:layout_height="95dp"
        android:layout_marginTop="112dp"
        android:text="Browse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartProductDisplay"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/checkOutButton"
        android:layout_width="173dp"
        android:layout_height="95dp"
        android:layout_marginTop="112dp"
        android:text="Check Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartProductDisplay"
        app:layout_constraintVertical_bias="0.754" />

    <TextView
        android:id="@+id/cartInfoTextView"
        android:layout_width="305dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:text="Nothing in cart."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartProductDisplay" />
</androidx.constraintlayout.widget.ConstraintLayout>